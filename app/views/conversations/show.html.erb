<p id="notice"><%= notice %></p>

<h2>The Conversation Detail : </h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <td><%= @conversation.id %></td>
  </tr>
  <tr>
    <th >Creator</th>
    <td><%= @conversation.user.name %></td>
  </tr>
  <tr>
    <th >Topic</th>
    <td><%= @conversation.topic.term %></td>
  </tr>
  <tr>
    <th >Conversation Content</th>
    <td><%= @conversation.context %></td>
  </tr>
  <tr>
    <th >Create Time</th>
    <td><%= @conversation.created_at %></td>
  </tr>
</table>



<% if !@current_user.nil? && @current_user.id == @conversation.user_id %>
  <%= link_to 'Edit', edit_topic_conversation_path(@conversation) %>
<% else %>
    <%= link_to '', '#' %>
<% end %>
<%= link_to 'Back', topic_conversations_path %>
