<h1>Editing Post</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: topic_conversation_post_path(@conversation.topic_id,@conversation)) do |f| %>
        <% if @post.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
                <% @post.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%#= f.label :context %>
          <%= f.text_area :context %>
        </div>

        <div class="actions">
          <%= f.submit class: "btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

<%= link_to 'Show', topic_conversation_post_path(@conversation.topic_id,@conversation.id) %> |
<%= link_to 'Back', topic_conversation_posts_path(@conversation.topic_id,@conversation.id) %>

