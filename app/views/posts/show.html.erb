<p id="notice"><%= notice %></p>

<h2>The Post Detail : </h2>

<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <td><%= @post.id %></td>
  </tr>
  <tr>
    <th >Creator</th>
    <td><%= @post.user.name %></td>
  </tr>
  <tr>
    <th >Conversation</th>
    <td><%= @post.conversation.context %></td>
  </tr>
  <tr>
    <th >Post Content</th>
    <td><%= @post.context %></td>
  </tr>
  <tr>
    <th >Create Time</th>
    <td><%= @post.created_at %></td>
  </tr>
</table>

<% if !@current_user.nil? && @current_user.id == @post.user_id %>
    <%= link_to 'Edit', edit_topic_conversation_post_path(@conversation.topic_id,@conversation.id,@post.id)  %>
    <%= ' | ' %>
<% else %>
    <%= link_to '', '#' %>
    <%= link_to '', '#' %>
<% end %>

<%= link_to 'Back', topic_conversation_posts_path(@conversation.topic_id,@conversation.id) %>